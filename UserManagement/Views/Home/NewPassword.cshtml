@model Entity.ViewModel.NewPassword

@{
    ViewData["Title"] = "NewPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Model.UserName = TempData["UserName"].ToString();
}

<div class="container">
    <div class="row justify-content-sm-center justify-content-md-center">

        <form class="col-12 col-sm-10 col-md-4 card" asp-action="NewPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-12 mt-3 text-center">
                    <h6>New Password Set</h6>
                    <hr />
                </div>
            </div>
            <input type="hidden" name="UserName" value="@TempData["UserName"].ToString()" />
            <input type="hidden" name="Token" value="@TempData["Token"].ToString()" />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

